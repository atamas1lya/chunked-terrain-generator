{
  "name": "terrain-generator",
  "version": "3.0.2",
  "description": "Create your worlds seamlessly",
  "main": "dist/terrain-generator.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/stackdumper/terrain-generator.git"
  },
  "bugs": {
    "url": "https://github.com/stackdumper/terrain-generator/issues",
    "email": "stackdumper@gmail.com"
  },
  "scripts": {
    "start": "npx parcel test/index.html --out-dir test/dist --no-hmr",
    "build": "npx webpack --mode production --config webpack/prod.config.js",
    "watch": "npx webpack --watch --mode development --config webpack/prod.config.js",
    "lint": "npx eslint . --ignore-path .gitignore",
    "lint:fix": "npx eslint . --ignore-path .gitignore --fix",
    "precommit": "lint-staged",
    "release": "npm run build && npm publish ."
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "author": "stackdumper",
  "license": "MIT",
  "dependencies": {
    "noisejs": "^2.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "lint-staged": "^7.0.0",
    "parcel-bundler": "^1.6.2",
    "pointer-lock": "0.0.4",
    "three": "^0.91.0",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13"
  }
}
